<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="800" prefWidth="1440" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cocky_fx.PrimaryController">

   <children>
      <Label text="COCKY CODERS" styleClass="loginSignUpTitle"/>

      <VBox id="newTaskVBox">

         <children>

            <Label text="Create New Task" styleClass="loginSignUpTitle"/>

            <Label text="New Task Name: " styleClass="labelToLeft"/>
            <TextField styleClass = "newTaskNameField"/>

            <Label text="Enter task Description:" styleClass="labeltoRight"/>
            <TextField styleClass = "taskDescriptionField"/>

            <Label text="Assign Team Memebers:" styleClass="labelToLeft"/>
            <TextField styleClass = "assignTeamMembersField"/>

            <Label text="Type:" styleClass="labelToLeft"/>
            <TextField styleClass = "taskTypeField"/>

            <Label text="To-Do:" styleClass="labelToLeft"/>
            <TextField styleClass = "taskToDoField"/>



            <Button text="Confirm" onAction="#ConfirmTaskButtonClicked" styleClass="signInSignUpButton"/>
            <Button text="Delete" onAction="#DeleteTaskButtonClicked" styleClass="signInSignUpButton"/>


 

 
         </children>

      </VBox>
   </children>
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>