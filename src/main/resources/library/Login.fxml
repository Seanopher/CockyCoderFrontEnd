<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="800" prefWidth="1440" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

   <children>
      <Label text="COCKY CODERS" styleClass="loginSignUpTitle"/>
      <VBox id="loginVBox">
         <children>
            <Label text="Login" styleClass="loginSignUpTitle"/>

            <Label text="Username:" />
            <TextField styleClass = "loginSignUpTextField"/>

            <Label text="Password: " />
            <PasswordField styleClass="loginSignUpTextField"/>

            <Label text="Invalid"/>
            <Label fx:id="lbl_error" styleClass="labelToLeft" />
            <Hyperlink text="Don't have an Account? Sign Up" onAction="#signUpButtonClicked"/>
         </children>
      </VBox>
   </children>
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
