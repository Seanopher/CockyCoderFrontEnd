<StackPane  prefHeight="800" prefWidth="1440" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">
    <children>
    <VBox styleClass="main-vbox-container">
        <HBox styleClass="main-hbox-container"> 
                <Label text="COCKY CODERS" styleClass="homeBrandLabel"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Project 1" styleClass="homeCenterTitle"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ImageView fx:id="imageView">
                    <image>
                        <Image url="@../images/user-icon.png" />
                    </image>
                </ImageView>
        </HBox>
        <HBox>
            <VBox styleClass="navigation-vbox">
                <ComboBox fx:id="projectDropdownNav" prefWidth="150"/>
                <ComboBox fx:id="taskDropdownNav" prefWidth="150"/>
            </VBox>
            <VBox styleClass="main-homescreen-content">
                <Label text="Today's Tasks" styleClass="main-homescreen-headers"/>
                <VBox>
                    <HBox styleClass ="tasks-list-hbox">
                        <Label text="Task 1" styleClass="tasks"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
    

    <!-- <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding> -->
    </children>
    <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</StackPane>
